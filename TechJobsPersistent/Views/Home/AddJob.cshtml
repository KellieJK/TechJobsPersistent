

<h1>Add a Job</h1>

<form asp-controller="Home" asp-action="ProcessAddJobForm" method="post">
    <div class="form-group">
        <label>Add Job Employer</label>
        <input class="form-control" />
        <span></span>
    </div>

    <div class="form-group">
        <label>Add Job Location</label>
        <input class="form-control" />
        <span></span>
    </div>


    <div class="form-group">
        <label>Current Employers</label>
        @{
            List<SelectListItem> listItems = new List<SelectListItem>();
            listItems.Add(new SelectListItem
            {
                Text = "Employer",
                Value = "Employer"
            });


        }

        @Html.DropDownList("Employer", listItems, new { @class = "form-control" })
    </div>



    <input type="submit" value="Add Job" />
</form>

